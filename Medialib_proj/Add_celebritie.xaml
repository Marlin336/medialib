<Window x:Class="Medialib_proj.Add_celebritie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ext="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Medialib_proj"
        mc:Ignorable="d"
        Title="Add celebritie record" Height="313.134" Width="387" ResizeMode="NoResize">
    <Grid>
        <DockPanel Margin="5,0">
            <StackPanel Margin="5,5" Orientation="Horizontal" DockPanel.Dock="Top">
                <Label>Name:</Label>
                <TextBox x:Name="tb_name" TextWrapping="NoWrap" Width="294"/>
            </StackPanel>
            <StackPanel Margin="5,5" Orientation="Horizontal" DockPanel.Dock="Top">
                <Label>Birthday:</Label>
                <ext:TimePicker x:Name="tp_birth" Format="ShortDate" ShowDropDownButton="False" Height="24" Width="284"/>
            </StackPanel>
            <StackPanel Margin="5,5" Orientation="Horizontal" DockPanel.Dock="Top">
                <Label>Description:</Label>
                <TextBox x:Name="tb_descript" TextWrapping="Wrap" Width="270" Height="150"/>
            </StackPanel>
            <Button x:Name="b_add" Content="Add" Margin="5" Click="B_add_Click" Width="331"/>
        </DockPanel>
    </Grid>
</Window>
